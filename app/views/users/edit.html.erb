<h1>Users#editx</h1>

<div class="container">
  <div class="row">
    <div class="col-md-8 mx-auto">

      <h1>User info</h1>

      <div class="h5">
        <% if @user.errors.any? %>
          <%= @user.errors.count %>件のerrorが発生しました
          <ul>
            <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
          </ul>
        <% end %>
      </div>

      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
      </div>
      <div class="form-group">
        <label for="inputImage">Image</label><br>
        <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept: "image/*" %>
      </div>
      <div class="from-group">
        <label for="inputIntroduction">Introduction</label><br>
        <%= f.text_area :introduction %>
      </div>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>