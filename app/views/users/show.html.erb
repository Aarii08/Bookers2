<h1>Users#show</h1>
<p>Find me in app/views/users/show.html.erb</p>


<div class="container">
  <div class="row">
    <div class="col-3 md-3">

      <h2>User info</h2>
      <table class="table">
        <%= image_tag @user.get_profile_image(100,100) %></p>
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>


      <div class="row">
      <%= link_to edit_user_path(@user.id), class: "btn btn-outline-secondary btn-block" do %>
       <i class="fa-solid fa-user-gear"></i>
      <% end %>



      </div>


      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>

        <p>Opinion</p>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
    </div>


    <div class="col-8 offset-1">
      <h2>Books</h2>


      <table class="table">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
		      <tr>
			      <td><%= image_tag @user.get_profile_image(100,100) %></p></td>
			      <td><%= link_to book.title, book_path(book.id) %></td>
			      <td><%= book.body %></td>
		      </tr>
		      <% end %>
	      </tbody>
      </table>

    </div>
  </div>
</div>

