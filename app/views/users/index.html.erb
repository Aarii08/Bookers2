<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>

<div class="container">
  <div class="row">

    <%= render "books/list", user: @user, book: @book %>

    <div class="col-8 offset-1">
      <h2>Users</h2>

      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
		      <tr>
			      <td><%= image_tag user.get_profile_image(100,100) %></p></td>
			      <td><%= user.name %></td>
			      <td><%= link_to "show", user_path(user.id) %></td>
		      </tr>
		      <% end %>
	      </tbody>
      </table>
    </div>
  </div>
</div>

