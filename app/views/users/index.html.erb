<h1>Users#index</h1>
<p>Find me in app/views/users/index.html.erb</p>


<div class="container">
  <div class="row">
    <div class="col-3 md-3">

      <h2>User info</h2>
      <p> 画像表示</p>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @user.introduction %></th>
          </tr>
        </tbody>
      </table>


      <div class="row">
      <%= link_to edit_user_path(:id), class: "btn btn-outline-secondary btn-block" do %>
       <i class="fa-solid fa-user-gear"></i>
      <% end %>



      </div>


      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>

        <p>Opinion</p>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
    </div>


    <div class="col-8 offset-1">
      <h2>Users</h2>


      <table class="table">
        <thead>
          <tr>
            <th>image</th>
            <th>name</th>
            <th></th>
          </tr>
        </thead>

        <tbody>
          <% @users.each do |user| %>
		      <tr>
			      <td>></td>
			      <td><%= @user.name %></td>
			      <td><%= link_to "show", user_path(current_user.id) %></td>
		      </tr>
		      <% end %>
	      </tbody>
      </table>

    </div>
  </div>
</div>

