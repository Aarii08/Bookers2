<div class="container">
  <div class="row">
    <div class="col-3 md-3">

      <h2>User info</h2>
      <p> 画像表示</p>
      <table class="table">
        <tbody>
          <tr>
            <th>name</th>
            <th><%= @book.user.name %></th>
          </tr>
          <tr>
            <th>introduction</th>
            <th><%= @book.user.introduction %></th>
          </tr>
        </tbody>
      </table>


      <div class="row">
        <%= link_to edit_user_path(:id), class: "btn btn-outline-secondary btn-block" do %>
         <i class="fa-solid fa-user-gear"></i>
      <% end %>
      </div>


      <h2>New book</h2>
      <%= form_with model: @book do |f| %>
        <p>Title</p>
        <%= f.text_field :title %>

        <p>Opinion</p>
        <%= f.text_area :body %>

        <%= f.submit 'Create Book', class: "btn btn-success" %>
      <% end %>
    </div>


    <div class="col-8 offset-1">
      <h2>Books detail</h2>

      <table class="table">
        <tbody>
		      <tr>
			      <td>image</td>
			      <td><%= link_to @book.title, book_path(@book.id) %></td>
			      <td><%= @book.body %></td>
			      <td><%= link_to "Edit", edit_book_path(@book.id), class: "btn btn-success" %></td>
			      <td><%= link_to "Destroy", books_path(@book.id), class: "btn btn-danger" %></td>
		      </tr>
	      </tbody>
      </table>

    </div>
  </div>
</div>
