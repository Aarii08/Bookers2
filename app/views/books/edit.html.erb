<h1>Books#edit</h1>

<% flash.each do |message_type, message| %>
  <div class="h4"><%= message %></div>
<% end %>

<div class="container">
  <div class="row">
    <div class="col-6 mx-auto">
      <h2>Editing Book</h2>

        <%= form_with model: @book, method: :patch do |f| %>

          <p>Title</p>
            <%= f.text_field :title %>

          <p>Opinion</p>
            <%= f.text_area :body %>
          <p>
            <%= f.submit 'Update Book', class: "btn btn-success" %>
          </p>
        <% end %>

          <%= link_to "Show", book_path(params[:id]) %>
            |
          <%= link_to "Back", books_path %>

    </div>
  </div>
</div>
