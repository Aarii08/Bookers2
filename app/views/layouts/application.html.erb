<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/5c54eb09f0.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark mb-2">
        <div class="container">
          <a href="/" class="navbar-brand">Bookers</a>

          <!--<div class="collapse navbar-collapse" id="navmenu">-->
          <div class="navbar-nav text-light">
          <ul class="navbar-nav ml-auto">
          <li class="nav-link text-light">
            <i class="fa-solid fa-house"><%= link_to "Home", root_path %></i>
          </li>

          <% if user_signed_in? %>
            <li class="navbar-item">
              <%= link_to "Users", users_path %>
            </li>
            <li class="navbar-item">
              <%= link_to "Books", books_path %>
            </li>
            <li class="navbar-item">
              <%= link_to "Log out", destroy_user_session_path, method: :delete %>
            </li>
          <% else %>
            <li class="navbar-item">
              <%= link_to "About", about_path %>
            </li>
            <li class="navbar-item">
              <%= link_to "Sing Up", new_user_registration_path %>
            </li>
            <li class="navbar-item">
              <%= link_to "Log in", new_user_session_path %>
            </li>
        </ul>
        </div>
        <!--</div>-->
        </div>
      </nav>
      <% end %>
    </header>

    <main>
    <%= yield %>
    </main>

    <footer>
      <div class="container mt-5">
        <div class="row">
          <div class="mx-auto">
             <p>CopyRight Infratop.inc</p>
          </div>
        </div>
      </div>
    </footer>


  </body>
</html>
