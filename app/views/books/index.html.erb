<h1>Books#index</h1>

<% flash.each do |message_type, message| %>
  <div class="h4"><%= message %></div>
<% end %>

<div class="container">
  <div class="row">

    <%= render "list", user: @user, book: @book %>

    <div class="col-8 offset-1">
      <h2>Books</h2>

      <table class="table table-hover">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
        </thead>
        <tbody>
          <% @books.each do |book| %>
		      <tr>
			      <td><%= image_tag book.user.get_profile_image(100,100) %></td>
			      <td><%= link_to book.title, book_path(book.id) %></td>
			      <td><%= book.body %></td>
		      </tr>
		      <% end %>
	      </tbody>
      </table>
    </div>
  </div>
</div>

