<h1>Users#editx</h1>


<% flash.each do |message_type, message| %>
  <div class="h4"><%= message %></div>
<% end %>

<div class="container">
  <div class="row">
    <div clss="col-5">

      <h2>User info</h2>
      <%= form_with model: @user do |f| %>
      <div class="form-group">
        <label for="inputName">Name</label><br>
        <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"名前" %>
      </div>
      <div class="form-group">
        <label for="inputImage">Image</label><br>
        <%= f.file_field :profile_image, placeholder:"プロフィール画像", accept: "image/*" %>
      </div>
      <div class="from-group">
        <label for="inputIntroduction">Introduction</label><br>
        <%= f.text_area :introduction %>
      </div>
        <%= f.submit "Update User", class: "btn btn-secondary" %>
      <% end %>
    </div>
  </div>
</div>